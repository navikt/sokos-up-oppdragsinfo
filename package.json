{
	"name": "sokos-up-oppdragsinfo",
	"version": "1.0.0",
	"description": "Oppdragsinfo i Utbetalingsportalen",
	"type": "module",
	"scripts": {
		"dev": "vite --mode mock",
		"dev:backend": "vite --mode backend",
		"build": "tsc && vite build",
		"playwright": "playwright test",
		"biome:check": "biome check --files-ignore-unknown=true",
		"biome:fix": "biome check --write --no-errors-on-unmatched",
		"stylelint:check": "stylelint '**/*.css'",
		"stylelint:fix": "stylelint '**/*.css' --fix",
		"prepare": "husky",
		"knip": "knip"
	},
	"dependencies": {
		"@axe-core/playwright": "^4.11.1",
		"@grafana/faro-web-sdk": "^2.2.2",
		"@hookform/resolvers": "^5.2.2",
		"@navikt/aksel-icons": "7.39.0",
		"@navikt/ds-css": "7.39.0",
		"@navikt/ds-react": "7.39.0",
		"axios": "^1.13.4",
		"dayjs": "^1.11.19",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-hook-form": "^7.71.1",
		"react-router": "^7.13.0",
		"swr": "^2.4.0",
		"zod": "^4.3.6",
		"zustand": "^5.0.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@navikt/aksel-stylelint": "7.39.0",
		"@playwright/test": "^1.58.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/node": "^25.2.0",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"autoprefixer": "^10.4.24",
		"husky": "^9.1.7",
		"jsdom": "^27.4.0",
		"knip": "^5.83.0",
		"lint-staged": "^16.2.7",
		"msw": "^2.12.8",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"stylelint": "^16.26.1",
		"stylelint-config-standard": "^39.0.1",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-css-injected-by-js": "^3.5.2",
		"vite-plugin-environment": "^1.1.3"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version"
		]
	},
	"stylelint": {
		"extends": [
			"stylelint-config-standard",
			"@navikt/aksel-stylelint/recommended"
		],
		"rules": {
			"aksel/design-token-no-global-override": [
				true,
				{
					"severity": "warning"
				}
			],
			"selector-class-pattern": null
		},
		"ignoreFiles": [
			"dist/**/*",
			"playwright-report/**/*"
		]
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": "biome check --write --no-errors-on-unmatched",
		"*.css": "stylelint --fix"
	},
	"engines": {
		"pnpm": ">=10.16.0",
		"node": ">=24.12.0"
	}
}
