{
  "name": "sokos-up-oppdragsinfo",
  "version": "1.0.0",
  "description": "Oppdragsinfo i Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "build": "tsc && vite build",
    "playwright": "playwright test",
    "vitest": "vitest",
    "lint": "eslint",
    "prepare": "husky",
    "stylelint": "stylelint '**/*.css'",
    "knip": "knip"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@grafana/faro-web-sdk": "^1.19.0",
    "@hookform/resolvers": "^5.2.2",
    "@navikt/aksel-icons": "7.35.1",
    "@navikt/ds-css": "7.35.1",
    "@navikt/ds-react": "7.35.1",
    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.68.0",
    "react-router": "^7.10.1",
    "swr": "^2.3.7",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@navikt/aksel-stylelint": "7.35.1",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.7",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^4.0.15"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "aksel/design-token-no-global-override": [
        true,
        {
          "severity": "warning"
        }
      ],
      "selector-class-pattern": null
    },
    "ignoreFiles": [
      "dist/**/*",
      "playwright-report/**/*"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "plugins": [
            "@trivago/prettier-plugin-sort-imports"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "pnpm": ">=10.16.0",
    "node": ">=22.21.0"
  }
}
