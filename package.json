{
  "name": "sokos-up-oppdragsinfo",
  "version": "1.0.0",
  "description": "Oppdragsinfo i Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "prepare": "husky",
    "lint": "eslint"
  },
  "dependencies": {
    "@grafana/faro-web-sdk": "^1.9.0",
    "@hookform/resolvers": "^3.9.0",
    "@navikt/aksel-icons": "6.13.0",
    "@navikt/ds-css": "6.13.0",
    "@navikt/ds-react": "6.13.0",
    "axios": "^1.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-router-dom": "^6.26.0",
    "swr": "^2.2.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.63",
    "@eslint/js": "^9.8.0",
    "@navikt/aksel-stylelint": "6.13.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-mock": "^3.0.2",
    "vitest": "^2.0.5"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "selector-class-pattern": null
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "tailwindConfig": "tailwind.config.cjs",
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=9"
  }
}
