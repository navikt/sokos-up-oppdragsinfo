{
  "name": "sokos-up-oppdragsinfo",
  "version": "1.0.0",
  "description": "Oppdragsinfo i Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint",
    "prepare": "husky",
    "stylelint": "stylelint '**/*.css'"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@grafana/faro-web-sdk": "^1.18.2",
    "@hookform/resolvers": "^5.1.1",
    "@navikt/aksel-icons": "7.24.0",
    "@navikt/ds-css": "7.24.0",
    "@navikt/ds-react": "7.24.0",
    "axios": "^1.10.0",
    "dayjs": "^1.11.13",
    "formik": "^2.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.3",
    "swr": "^2.3.3",
    "zod": "^3.25.67",
    "zod-formik-adapter": "^1.3.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@navikt/aksel-stylelint": "7.24.0",
    "@playwright/test": "^1.53.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.0.7",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "msw": "^2.10.2",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^3.2.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "aksel/design-token-no-global-override": [
        true,
        {
          "severity": "warning"
        }
      ],
      "selector-class-pattern": null
    },
    "ignoreFiles": "dist/**/*"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "plugins": [
            "@trivago/prettier-plugin-sort-imports"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=9.15"
  }
}
