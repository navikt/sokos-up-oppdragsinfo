{
  "name": "sokos-up-oppdragsinfo",
  "version": "1.0.0",
  "description": "Oppdragsinfo i Utbetalingsportalen",
  "type": "module",
  "scripts": {
    "dev:mock": "vite --mode mock",
    "dev:backend": "vite --mode backend",
    "dev:backend-q1": "vite --mode backend-q1",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint",
    "prepare": "husky",
    "stylelint": "stylelint '**/*.css'"
  },
  "dependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@grafana/faro-web-sdk": "^1.12.2",
    "@hookform/resolvers": "^3.9.1",
    "@navikt/aksel-icons": "7.7.0",
    "@navikt/ds-css": "7.7.0",
    "@navikt/ds-react": "7.7.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "react-router-dom": "^7.0.2",
    "swr": "^2.2.5",
    "zod": "^3.23.8",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eik/rollup-plugin": "^4.0.64",
    "@eslint/js": "^9.16.0",
    "@navikt/aksel-stylelint": "7.7.0",
    "@playwright/test": "^1.49.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@trivago/prettier-plugin-sort-imports": "^5.1.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "msw": "^2.6.8",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^6.0.3",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^2.1.8"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "@navikt/aksel-stylelint/recommended"
    ],
    "rules": {
      "aksel/design-token-no-global-override": [
        true,
        {
          "severity": "warning"
        }
      ]
    },
    "ignoreFiles": "dist/**/*"
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "**/*.module.css",
        "options": {
          "tailwindConfig": "tailwind.config.cjs",
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      },
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ],
    "importOrder": [
      "^@navikt/(.*)$",
      "^@/(.*)$",
      "^[./]"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=9.4.0"
  }
}
